# CGM Data Source: "nightscout" or "librelinkup"
CGM_SOURCE=nightscout

# Nightscout instance (Docker)
NIGHTSCOUT_PORT=1337
NIGHTSCOUT_API_SECRET=your-api-secret-min-12-chars

# Nightscout connection (for SweetWatch app)
# Use "nightscout" hostname when running in Docker, "localhost" otherwise
NIGHTSCOUT_URL=http://nightscout:1337

# LibreLinkUp (required when CGM_SOURCE=librelinkup)
LIBRE_USERNAME=your_email@example.com
LIBRE_PASSWORD=your_password
LIBRE_REGION=EU  # EU, US, etc.

# Claude API (AI agent)
ANTHROPIC_API_KEY=sk-ant-...

# App settings
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=info

# Database
DATABASE_URL=sqlite:///./sweetwatch.db
# DATABASE_URL=postgresql://user:password@localhost:5432/sweetwatch

# Garmin Connect IQ (widget config)
GARMIN_API_URL=http://localhost:8000
